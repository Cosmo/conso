  <div class="field">
    <%= f.label :product_id %><br>
    <%= f.select :product_id, Product.all.map { |s| [s.name, s.id] } %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, User.all.map { |s| [s.name, s.id] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
